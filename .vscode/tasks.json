{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "gulp",
            "task": "build",
            "group": "build",
            "problemMatcher": [
                "$tslint5",
                "$tsc"
            ]
        },
        {
            "type": "gulp",
            "task": "buildDebug",
            "group": "build",
            "problemMatcher": [
                "$tslint5",
                "$tsc"
            ]
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "gulp",
            "task": "watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tslint5",
                "$tsc"]
        }
    ]
}